<UserControl x:Class="Fuzz.Controls.PropertyListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fuzz.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="275"
             Margin="0,5,0,0"
             Height="60" Width="275">
    <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="0" Margin="5,0">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Name, FallbackValue=Name}" HorizontalAlignment="Center" Padding="0,6" Foreground="White" />
            <StackPanel Margin="12,0">
                <Slider Value="{Binding FloatValue}" Orientation="Horizontal" HorizontalAlignment="Stretch"/>
            </StackPanel>        
        </StackPanel>
    </Border>
</UserControl>
