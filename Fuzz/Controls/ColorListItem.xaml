<UserControl x:Class="Fuzz.Controls.ColorListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fuzz.Controls"
             xmlns:converters="clr-namespace:Fuzz.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="247"
             Height="60" Width="246">
    <UserControl.Resources>
        <ResourceDictionary Source="../Style.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Name, FallbackValue=Key}" Foreground="White" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Fill="{Binding Value, Converter={StaticResource ColorToSolidColorBrushValueConverter}}" />
    </Grid>
</UserControl>
